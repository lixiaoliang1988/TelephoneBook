<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.buyi.telephonebook.Activity.MainActivity">
    <com.buyimingyue.mymodule.View.Titlebar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/title_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="contact"/>
        <TextView
            android:id="@+id/excel_tv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="excel"/>
    </LinearLayout>

    <ListView
        android:id="@+id/phone_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/green"
        android:dividerHeight="2dp"/>
</LinearLayout>
